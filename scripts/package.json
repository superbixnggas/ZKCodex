{
  "name": "zkcodex-backend",
  "version": "1.0.0",
  "description": "ZKCodex Backend - Zero-Knowledge Transmission System",
  "main": "index.js",
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd zkcodex-static && npx serve . -p 3000",
    "dev:backend": "supabase functions serve --port 54321",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "cd zkcodex-static && npm run build",
    "build:frontend": "cd zkcodex-static && npx vite build",
    "test": "./test_backend.sh all",
    "test:quick": "./test_backend.sh quick",
    "test:message": "./test_backend.sh message",
    "test:verify": "./test_backend.sh verify",
    "deploy": "./deploy_backend.sh",
    "deploy:functions": "supabase functions deploy message verify",
    "deploy:db": "supabase db push",
    "reset:db": "supabase db reset",
    "start": "npx serve zkcodex-static -s -l 3000",
    "serve": "npx serve zkcodex-static -s -l 3000",
    "lint": "echo 'No linting configured yet'",
    "format": "echo 'No formatting configured yet'",
    "clean": "rm -rf node_modules .env.local",
    "setup": "cp .env.example .env && npm install && supabase start",
    "help": "echo 'Available commands:' && echo '  npm run dev          - Start development server' && echo '  npm run test         - Test all backend services' && echo '  npm run deploy       - Deploy to production' && echo '  npm run setup        - Initial setup'",
    "check:env": "node -e \"console.log('SUPABASE_URL:', process.env.SUPABASE_URL ? '✅ Set' : '❌ Missing'); console.log('SUPABASE_ANON_KEY:', process.env.SUPABASE_ANON_KEY ? '✅ Set' : '❌ Missing'); console.log('SUPABASE_SERVICE_ROLE_KEY:', process.env.SUPABASE_SERVICE_ROLE_KEY ? '✅ Set' : '❌ Missing')\"",
    "health:check": "curl -s \"https://lrisuodzyseyqhukqvjw.supabase.co/rest/v1/codex_entries?select=count\" -H \"Authorization: Bearer $SUPABASE_ANON_KEY\" | jq -r '.[0].count // \"Error\"'",
    "status": "echo 'ZKCodex Status:' && echo 'Frontend: https://f30gia3n7psl.space.minimax.io' && echo 'Supabase: https://lrisuodzyseyqhukqvjw.supabase.co' && echo 'Message API: https://lrisuodzyseyqhukqvjw.supabase.co/functions/v1/message' && echo 'Verify API: https://lrisuodzyseyqhukqvjw.supabase.co/functions/v1/verify'",
    "logs": "supabase functions logs --follow",
    "logs:message": "supabase functions logs message --follow",
    "logs:verify": "supabase functions logs verify --follow"
  },
  "keywords": [
    "zkcodex",
    "supabase",
    "edge-functions",
    "zero-knowledge",
    "blockchain",
    "ai",
    "chat"
  ],
  "author": "ZKCodex Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "supabase": "^1.123.4"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/zkcodex.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/zkcodex/issues"
  },
  "homepage": "https://f30gia3n7psl.space.minimax.io",
  "private": true
}